							},
							"sink": {
								"name": "payment_date",
								"type": "String",
								"physicalType": "String"
							}
						},
						{
							"source": {
								"name": "paid_amount",
								"type": "String",
								"physicalType": "String"
							},
							"sink": {
								"name": "paid_amount",
								"type": "String",
								"physicalType": "String"
							}
						},
						{
							"source": {
								"name": "payment_status",
								"type": "String",
								"physicalType": "String"
							},
							"sink": {
								"name": "payment_status",
								"type": "String",
								"physicalType": "String"
							}
						},
						{
							"source": {
								"name": "bank_name",
								"type": "String",
								"physicalType": "String"
							},
							"sink": {
								"name": "bank_name",
								"type": "String",
								"physicalType": "String"
							}
						}
					],
					"typeConversion": true,
					"typeConversionSettings": {
						"allowDataTruncation": true,
